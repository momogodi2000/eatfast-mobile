    "guest": {
      "description": "Unauthenticated users who can browse and place guest orders",
      "authRequired": false,
      "endpoints": [
        {
          "method": "GET",
          "path": "/api/public/restaurants",
          "description": "List all active restaurants",
          "parameters": {
            "query": {
              "page": "number",
              "limit": "number",
              "cuisineType": "string",
              "rating": "number",
              "lat": "number",
              "lng": "number",
              "radius": "number"
            }
          },
          "response": {
            "success": "boolean",
            "data": "Restaurant[]",
            "pagination": "PaginationInfo"
          }
        },
        {
          "method": "GET",
          "path": "/api/public/restaurants/:id",
          "description": "Get restaurant details by ID",
          "parameters": {
            "path": {
              "id": "uuid"
            }
          },
          "response": {
            "success": "boolean",
            "data": "Restaurant"
          }
        },
        {
          "method": "GET",
          "path": "/api/public/restaurants/:id/menu",
          "description": "Get restaurant menu items",
          "parameters": {
            "path": {
              "id": "uuid"
            },
            "query": {
              "category": "string",
              "available": "boolean"
            }
          },
          "response": {
            "success": "boolean",
            "data": "MenuItem[]"
          }
        },
        {
          "method": "POST",
          "path": "/api/guest/orders",
          "description": "Place order as guest user",
          "body": {
            "guestName": "string",
            "guestPhone": "string",
            "guestEmail": "string",
            "restaurantId": "uuid",
            "items": "OrderItem[]",
            "deliveryAddress": "string",
            "paymentMethod": "string",
            "specialInstructions": "string"
          },
          "response": {
            "success": "boolean",
            "data": {
              "orderId": "uuid",
              "trackingId": "string",
              "total": "number"
            }
          }
        },
        {
          "method": "GET",
          "path": "/api/guest/orders/:trackingId",
          "description": "Track guest order by tracking ID",
          "parameters": {
            "path": {
              "trackingId": "string"
            }
          },
          "response": {
            "success": "boolean",
            "data": "Order"
          }
        }
      ]
    },
