{
  "info": {
    "title": "EatFast API",
    "version": "1.0.0",
    "description": "Comprehensive food delivery API for Cameroon",
    "baseUrl": {
      "development": "http://localhost:4000",
      "production": "https://api.eatfast.cm"
    },
    "basePath": "/api/v1",
    "lastUpdated": "2025-09-10"
  },
  "authentication": {
    "type": "Bearer Token",
    "header": "Authorization",
    "format": "Bearer <token>"
